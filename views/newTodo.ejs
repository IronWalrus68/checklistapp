<% layout('layouts/boilerplate')%>

<div class="container mt-5">
    <h1>New Todo</h1>
    <form action="/newTodo" method="POST">
      <div class="mb-3">
        <label for="listName" class="form-label">List Name</label>
        <input type="text" class="form-control" id="listName" name="listName" required>
      </div>
      <div class="mb-3">
        <label for="listContent" class="form-label">List Content</label>
        <textarea class="form-control" id="listContent" name="listContent" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a class="btn btn-primary" href="/" role="button">Back</a>
    </form>
  </div>